# Database Configuration
DATABASE_CONNECTION_STRING=Data Source=raf.db
DATABASE_PROVIDER=SQLite

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-here-change-this-in-production
JWT_ISSUER=ShelfScore
JWT_AUDIENCE=ShelfScore-Users
JWT_EXPIRY_MINUTES=60

# API Configuration
API_BASE_URL=http://localhost:5000
API_VERSION=v1
CORS_ALLOWED_ORIGINS=http://localhost:8081,http://127.0.0.1:8081

# Flutter Configuration
FLUTTER_WEB_PORT=8081
FLUTTER_DEBUG_MODE=false

# File Upload Configuration
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=jpg,jpeg,png,webp
UPLOAD_PATH=uploads

# Logging Configuration
LOG_LEVEL=Information
LOG_FILE_PATH=logs/shelfscore.log

# Security Configuration
BCRYPT_WORK_FACTOR=12
SESSION_TIMEOUT_MINUTES=30
MAX_LOGIN_ATTEMPTS=5

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@shelfscore.com

# Redis Configuration (Optional)
REDIS_CONNECTION_STRING=localhost:6379
REDIS_DATABASE=0

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090

# Development Configuration
DEBUG_MODE=false
ENABLE_SWAGGER=true
ENABLE_CORS=true
